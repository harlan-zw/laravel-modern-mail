{
    "name": "harlan-zw/laravel-modern-mail",
    "description": "Extends the Laravel mail experience.",
    "keywords": [
        "Mail",
        "Email",
        "MJML",
        "Laravel"
    ],
    "homepage": "https://github.com/harlan-zw/laravel-modern-mail",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/harlan-zw/laravel-modern-mail/issues",
        "source": "https://github.com/harlan-zw/laravel-modern-mail"
    },
    "authors": [
        {
            "name": "Harlan Wilton",
            "homepage": "https://harlanzw.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "html2text/html2text": "^4.3",
        "illuminate/filesystem": "^9.0|^10.0",
        "illuminate/support": "^9.0|^10.0",
        "illuminate/view": "^9.0|^10.0"
    },
    "require-dev": {
        "illuminate/mail": "^9.0",
        "kirschbaum-development/mail-intercept": "^0.3.2",
        "orchestra/testbench": "^7.0",
        "phpunit/phpunit": "^9.0",
        "spatie/phpunit-snapshot-assertions": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "ModernMail\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ModernMail\\Providers\\ModernMailServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
